// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

// ─── Messaging Models ────────────────────────────────────────

model Conversation {
  id        String    @id @default(cuid())
  offerId   String    @unique
  createdAt DateTime  @default(now())

  participants ConversationParticipant[]
  messages     Message[]
}

model ConversationParticipant {
  id             String       @id @default(cuid())
  conversationId String
  address        String       // Lowercase EVM address

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@unique([conversationId, address])
  @@index([address])
}

model Message {
  id             String   @id @default(cuid())
  conversationId String
  sender         String   // Lowercase EVM address
  text           String   // AES-256-GCM ciphertext (base64) — only participants can decrypt
  iv             String?  // AES-GCM initialization vector (base64), null = legacy plaintext
  createdAt      DateTime @default(now())
  readAt         DateTime?

  conversation Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)

  @@index([conversationId, createdAt])
  @@index([sender])
}

// ─── Auth Sessions (wallet-signature based) ──────────────────

model AuthSession {
  id        String   @id @default(cuid())
  address   String   // Lowercase EVM address
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([address])
  @@index([expiresAt])
}

// ─── E2E Encryption Keys ─────────────────────────────────────
// Stores the user's secp256k1 public key for ECDH key exchange.
// Derived client-side from a deterministic wallet signature.
// One key per address — persists across sessions.

model UserEncryptionKey {
  id        String   @id @default(cuid())
  address   String   @unique // Lowercase EVM address
  publicKey String   // Hex-encoded compressed secp256k1 public key (33 bytes)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
